{% extends "base.html.twig" %}

{% block title %}Modifier ingrédient -
{{ parent() }}
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row">
	<section class="col-12">
		<h1>
			<strong>Modifier un ingrédient</strong>
		</h1>
	</section>
</header>
<!-- MAIN -->
<section class="ingredients_new row">
	<div class="col-11 col-lg-7">
		<div class="card shadow">
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.name) }}
					{{ form_widget(form.name) }}
					<div class="form-error">
						{{ form_errors(form.name) }}
					</div>
				</div>

				<div class="form-group pt-4">
				<button type="submit" class='validate shadow me-4'>Valider</button>
					<a href="{{ path('ingredient.index') }}" class="button delete shadow">
						Annuler
					</a>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</section>
{% endblock %}