{% extends 'base.html.twig' %}

{% block title %}Modication Utilisateur -
{{ parent() }}
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row">
	<section class="col-12">
		<h1><strong>Modifier mes informations</strong></h1>
	</section>
</header>
<!-- MAIN -->
<main class="main_informations row">
	<section class="col-11 col-lg-5">
		{% for message in app.flashes('warning') %}
		<div class="alert alert-warning mt-4">
			{{ message }}
		</div>
		{% endfor %}

		<div class="card form shadow">
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.fullName) }}
					{{ form_widget(form.fullName) }}
					<div class="form-error">
						{{ form_errors(form.fullName) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.pseudo) }}
					{{ form_widget(form.pseudo) }}
					<div class="form-error">
						{{ form_errors(form.pseudo) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.plainPassword) }}
					{{ form_widget(form.plainPassword) }}
					<div class="form-error">
						{{ form_errors(form.plainPassword) }}
					</div>
				</div>

				<div class="form-group pt-4">
					<button type="submit" class='btn btn-success shadow me-4'>Modifier</button>
					<a href="{{ path('home.index') }}" class="btn btn-danger shadow">
						Annuler
					</a>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
</main>

{% endblock %}