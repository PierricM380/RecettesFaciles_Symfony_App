{% extends 'base.html.twig' %}

{% block title %}Connexion -
{{ parent() }}
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row">
	<section class="col-12">
		<h1>
			<strong>Connexion</strong>
		</h1>
	</section>
</header>
<!-- MAIN -->
<section class="login row">
	<div class="col-11 col-lg-4">
		{% if error %}
		<div class="alert alert-danger mt-4">
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
		{% endif %}

		<form class="card shadow" action="{{ path('security.login') }}" method="post" name="login">
			<div class="card-body">
				<div class="form-group">
					<label for="username" class="form-label mt-4">Adresse email</label>
					<input type="email" class="form-control" id="username" name="_username" placeholder="exemple@exemple.fr" value="{{ last_username }}">
					<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email Ã  quelqu'un.</small>
				</div>
				<div class="form-group">
					<label for="password" class="form-label mt-4">Mot de passe</label>
					<input type="password" class="form-control" id="password" name="_password" placeholder="********">
				</div>

				<div class="form-group">
					<button type="submit" class="validate shadow mt-4">
						Se connecter
					</button>
				</div>
			</div>
		</form>
	</div>
</section>
{% endblock %}