{% extends "base.html.twig" %}

{% block title %}Apéritifs -
{{ parent() }}
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="row">
	<section class="col-12">
		<h1>
			<strong>Les Apéritifs</strong>
		</h1>
	</section>
</header>
<!-- MAIN -->
<main class="main_recipes row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
	{% for recipe in recipes %}
	<div class="col-11">
		<div class="card shadow h-100">
			<img src="{{ vich_uploader_asset(recipe, 'imageFile') }}" class="card-img-top" alt="Imgae d'une recette">
			<h2>{{ recipe.name|title }}</h2>
			<div class="card-body">
				<h3>Ingrédients</h3>
				<ul>
					{% for ingredient in recipe.ingredients %}
					<li>{{ ingredient.name }}</li>
					{% endfor %}
				</ul>
				<h3>Préparation</h3>
				<p class="card-text">{{ recipe.description }}</p>
			</div>
		</div>
	</div>
	{% endfor %}
</main>

{% endblock %}